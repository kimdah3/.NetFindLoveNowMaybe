@model FindLoveNowMaybe.Models.HomeModel

@{
    ViewBag.Title = "Index";
}


<!--Under Navbar-->

<div class="container">
    <div class="jumbotron text-center">
        <h1>Find Love Now Maybe</h1>
        <p>At our site for only $50/month you will find your next love, maybe.</p>
        @Html.ActionLink("Login", "Index", "Account", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Register", "Register", "Account", null, new { @class = "btn btn-success" })
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <h3>Members already looking for lovers</h3>
    </div>
</div>
<!--Några profiler-->
<div class="row">
    @foreach (var user in Model.RandomUsers)
    {
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                <a href="~/Account/Register">
                    <img src="~/Content/Images/@user.Picture" max-height="190" class="img-rounded" alt="hej">
                </a>
                <div class="caption">
                    <h3>@user.FirstName @user.LastName </h3>
                    @Html.ActionLink("See profile", "Register", "Account", null, new { @class = "btn btn-info" })
                </div>
            </div>
        </div>
    }
</div>
